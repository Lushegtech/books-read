<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Card</title>
  <link rel="stylesheet" href="/public/css/main.css">
  <!-- Include Lucide icons via CDN -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <div class="container">
    <div class="book-card">
      <div class="book-cover">
        <div class="cover-gradient"></div>
        <img src="<%= book.coverUrl || '/images/placeholder.jpg' %>" alt="Cover of <%= book.title %>">
        
        <!-- Rating displayed on the cover -->
        <div class="rating">
          <% for(let i = 0; i < 5; i++) { %>
            <i data-lucide="star" class="star <%= i < book.rating ? 'filled' : '' %>"></i>
          <% } %>
        </div>
      </div>
      
      <div class="book-content">
        <!-- Book title and author -->
        <div class="book-header">
          <h2 class="book-title"><%= book.title %></h2>
          <p class="book-author">by <%= book.author %></p>
        </div>
        
        <!-- Date read with icon -->
        <div class="book-date">
          <i data-lucide="calendar" class="date-icon"></i>
          <span>Read on <%= new Date(book.dateRead).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></span>
        </div>
        
        <!-- Notes section with styled background -->
        <% if (book.notes) { %>
          <div class="book-notes">
            <h4 class="notes-title">Notes</h4>
            <p class="notes-content"><%= book.notes %></p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    // Initialize Lucide icons
    lucide.createIcons();
  </script>
</body>
</html>

